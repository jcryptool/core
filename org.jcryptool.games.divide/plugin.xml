<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.jcryptool.games"
            class="org.jcryptool.games.divide.views.DivideView"
            icon="icons/view.gif"
            id="org.jcryptool.games.divide.views.DivideView"
            name="%View.name">
      </view>
   </extension>
   <extension
         point="org.jcryptool.core.operations.games">
      <Game
            name="%Game.name"
            viewId="org.jcryptool.games.divide.views.DivideView">
      </Game>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="org.jcryptool.games.divide.views.DivideView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.jcryptool.games.divide.views.DivideView">
         <command
               commandId="org.jcryptool.games.divide.newGameCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/new_wiz.gif"
               style="push">
         </command>
         <separator
               name="org.jcryptool.games.divide.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.jcryptool.games.divide.helpCommand"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/help_contents.gif"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.jcryptool.games.divide.helpCommand"
            name="%Toolbar.Help">
      </command>
      <command
            id="org.jcryptool.games.divide.newGameCommand"
            name="%Toolbar.NewGame">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.games.divide.handler.HelpHandler"
            commandId="org.jcryptool.games.divide.helpCommand">
      </handler>
      <handler
            class="org.jcryptool.games.divide.handler.NewGameHandler"
            commandId="org.jcryptool.games.divide.newGameCommand">
         <activeWhen>
            <with
                  variable="org.jcryptool.games.divide.newGameCommandState">
               <equals
                     value="enabled">
               </equals>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="$nl$/contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="$nl$/toc.xml"
            primary="false">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="org.jcryptool.games.divide.sourceProviders.NewGameStateSourceProvider">
         <variable
               name="org.jcryptool.games.divide.newGameCommandState"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
